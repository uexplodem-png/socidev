# Database Configuration (PRODUCTION)
DB_DIALECT=mysql
DB_HOST=your-database-host
DB_PORT=3306
DB_USERNAME=your-database-username
DB_PASSWORD=your-strong-database-password
DB_NAME=socidev_production

# JWT Configuration (PRODUCTION - CHANGE THESE!)
JWT_SECRET=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-MINIMUM-32-CHARACTERS
JWT_EXPIRES_IN=24h

# Application Configuration
NODE_ENV=production
PORT=3000

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=error

# CORS Configuration (Set your production domain)
CORS_ORIGIN=https://yourdomain.com

# Email Configuration (Optional - for email verification)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@yourdomain.com

# 2FA Configuration
TOTP_ISSUER=YourAppName
TOTP_WINDOW=1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET
SESSION_MAX_AGE=86400000

# Admin Account (First Setup)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE-THIS-IMMEDIATELY

# Payment Configuration (if applicable)
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_SECRET=your-payment-secret

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Feature Flags (can be controlled via admin panel)
ENABLE_REGISTRATION=true
ENABLE_2FA=true
REQUIRE_EMAIL_VERIFICATION=false
